<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainmenuActivity">

    <Button
        android:id="@+id/chat"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#219191"
        android:text="Send Sticker to a friend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sentstickercount"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:backgroundTint="#1592CA"
        android:text="Sent Sticker Count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chat" />

    <Button
        android:id="@+id/receivedStickerButton"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:backgroundTint="#0F60A1"
        android:text="Received Sticker History"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sentstickercount" />
</androidx.constraintlayout.widget.ConstraintLayout>