<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/error_msg2"
        android:layout_width="351dp"
        android:layout_height="118dp"
        android:layout_marginTop="140dp"
        android:text="Please choose an option to upload an image"
        android:textAlignment="center"
        android:textColor="@color/darkbluelatest"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:backgroundTint="#EA4C89"
        android:elevation="@dimen/_90sdp"
        android:text="Choose existing photo"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera" />

    <Button
        android:id="@+id/camera"
        android:layout_width="324dp"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#EA4C89"
        android:elevation="@dimen/_90sdp"
        android:text="Take Photo"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/error_msg2" />

</androidx.constraintlayout.widget.ConstraintLayout>